bindcode $mod+Control+13 workspace $ws13
bindcode $mod+Control+14 workspace $ws14
bindcode $mod+Control+15 workspace $ws15
bindcode $mod+Control+16 workspace $ws16
bindcode $mod+Control+17 workspace $ws17
bindcode $mod+Control+18 workspace $ws18
bindcode $mod+Control+19 workspace $ws19
bindcode $mod+Control+20 workspace $ws20

# move focused container to workspace
bindcode $mod+Shift+11 move container to workspace $ws1
