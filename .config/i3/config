bindsym $mod+Control+parenright workspace $ws12
bindsym $mod+Control+braceright workspace $ws13
bindsym $mod+Control+plus workspace $ws14
bindsym $mod+Control+braceleft workspace $ws15
bindsym $mod+Control+bracketright workspace $ws16
bindsym $mod+Control+bracketleft workspace $ws17
bindsym $mod+Control+exclam workspace $ws18
bindsym $mod+Control+equal workspace $ws19
bindsym $mod+Control+asterisk workspace $ws20

# move focused container to workspace
bindsym $mod+Shift+parenleft move container to workspace $ws1
bindsym $mod+Shift+parenright move container to workspace $ws2
bindsym $mod+Shift+braceright move container to workspace $ws3
bindsym $mod+Shift+plus move container to workspace $ws4
bindsym $mod+Shift+braceleft move container to workspace $ws5
bindsym $mod+Shift+bracketright move container to workspace $ws6
bindsym $mod+Shift+bracketleft move container to workspace $ws7
bindsym $mod+Shift+exclam move container to workspace $ws8
bindsym $mod+Shift+equal move container to workspace $ws9
bindsym $mod+Shift+asterisk move container to workspace $ws10
bindsym $mod+Shift+Control+parenleft move container to workspace $ws11
bindsym $mod+Shift+Control+parenright move container to workspace $ws12
bindsym $mod+Shift+Control+braceright move container to workspace $ws13
bindsym $mod+Shift+Control+plus move container to workspace $ws14
bindsym $mod+Shift+Control+braceleft move container to workspace $ws15
